<div class="chat-input-bar mt-3">

  <%= simple_form_for [@study, chat], html: { class: "d-flex justify-content-between align-items-center gap-2" } do |f| %>
    <%= f.input :user_question, label: false, placeholder: "Type your question...", input_html: { class: "form-control chat-input", autocomplete: "off" },
    wrapper_html: { class: "flex-grow-1" } %>

    <% unless current_user.tutor? %>
      <%= f.input :prompt, as: :boolean, label: raw('<i class="fas fa-robot" style="color: #8e24aa; margin-right: 4px;"></i> <span style="color: #8e24aa; font-weight: 500;">Sparky</span>'), wrapper_html: { style: 'margin-bottom: 0;' } %>
    <% end %>

    <%= f.button :submit, "Ask", class: "btn btn-purple chat-submit-btn" %>
  <% end %>
</div>
