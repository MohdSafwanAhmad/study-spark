<div class="container mt-4">
  <h2 class="mb-4">Create Your Profile</h2>

  <%= simple_form_for @tutor, url: expertises_path, html: { class: "needs-validation" } do |f| %>
    <div class="mb-3">
      <%= f.simple_fields_for :tutor_profile do |pf| %>
        <div class="form-group mb-3">
          <%= pf.input :name, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
        </div>
        <div class="form-group mb-3">
          <%= pf.input :bio, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
        </div>
        <div class="form-group mb-3">
          <%= pf.input :experience, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
        </div>
      <% end %>
    </div>

    <%= f.button :submit, "Create Profile", class: "btn btn-primary" %>
  <% end %>
</div>
