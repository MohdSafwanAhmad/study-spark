<div class="container mt-4" data-controller="expertise">
  <h2 class="mb-4">Add Your Expertise</h2>

  <%= simple_form_for @expertise do |f| %>
    <div id="expertises-container" data-expertise-target="container">

        <div class="border p-3 mb-3 bg-light rounded expertise-fields">
          <%= f.input :subject_id, as: :select, collection: Subject.all.pluck(:name, :id), prompt: "Select Subject",
               input_html: { class: "form-select" }, label: "Subject" %>

          <%= f.input :tutor_rate, label: "Hourly Rate ($)", input_html: { class: "form-control", min: 0 } %>
        </div>

    </div>

    <%= f.submit "Add Expertise", class: "btn btn-primary" %>
  <% end %>
</div>
