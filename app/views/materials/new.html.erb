<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4">
        <h3 class="mb-4">Upload Study Materials</h3>

        <%= simple_form_for @material, url: study_materials_path(@study), html: { multipart: true } do |f| %>
          <%= f.input :name, label: "Material Name", input_html: { class: 'form-control' } %>

          <%= f.input :description, label: "Description", input_html: { class: 'form-control' } %>

          <%= f.input :summary, label: "Summary", input_html: { class: 'form-control' } %>

          <div class="mb-3">
            <%= f.label :file, "Upload File", class: "form-label" %>
            <%= f.file_field :file, class: "form-control" %>
          </div>

          <%= f.button :submit, "Upload Material", class: "btn btn-primary mt-3" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
