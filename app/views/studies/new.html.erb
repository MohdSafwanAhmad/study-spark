<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4">
        <h3 class="mb-4">Start a New Study</h3>

        <%= simple_form_for @study, html: { multipart: true } do |f| %>
          <%= f.input :learning_objective, label: "Your Learning Objectives", input_html: { class: 'form-control' } %>

         <%= f.input :grade_level,
            collection: [['8th Grade', 8], ['9th Grade', 9], ['10th Grade', 10]],
            prompt: "Select Grade Level",
            label: "Grade Level",
            input_html: { class: 'form-select' } %>
          <%= f.input :subject_id,
            collection: Subject.all.pluck(:name, :id),
            prompt: "Select a Subject",
            label: "Subject",
            input_html: { class: 'form-select' } %>


          <div class="mb-3">
            <%= f.label :course_materials, "Upload Course Materials", class: "form-label" %>
            <%= f.file_field :course_materials, multiple: true, class: "form-control" %>
          </div>

          <%= f.button :submit, "Start Studying", class: "btn btn-primary mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
