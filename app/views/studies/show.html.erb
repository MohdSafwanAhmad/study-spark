<div class="container py-4">
  <!-- Combined Subject Name and Learning Objective Card -->
  <div class="subject-card p-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
      <h1 class="display-5 fw-bold mb-0" style="color: #714288;"><%= @study.subject.name %></h1>
      <span class="badge bg-light-purple text-purple">Grade <%= @study.subject.grade_level %></span>
    </div>
    <div>
      <h4 class="fw-bold mb-2">Learning Objective</h4>
      <p class="mb-0 text-base"><%= @study.learning_objective %></p>
    </div>
  </div>

  <div class="row g-4 align-items-start">
    <!-- Study Materials Card -->
    <div class="col-lg-8">
      <div class="subject-card p-4 h-100">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2 class="h4 fw-bold mb-0">Study Materials</h2>
          <% if @materials.any? %>
            <div class="upload-section">
              <label for="file-upload" class="btn btn-outline-purple btn-sm d-flex align-items-center gap-1 cursor-pointer">
                <span class="fs-5">&#43;</span>
                <span>Upload & Generate</span>
              </label>
            
              <!-- Hidden form for file upload -->
              <%= form_with url: study_materials_path(@study), multipart: true, local: true, id: "upload-form", class: "d-none" do |form| %>
                <%= form.file_field "material[file]", id: "file-upload", accept: ".pdf", onchange: "document.getElementById('upload-form').submit();" %>
              <% end %>
            </div>
          <% end %>
        </div>
        <% if @materials.any? %>
          <!-- Material Filter Dropdown -->
          <div class="mb-4">
            <label for="materialSelect" class="form-label fw-semibold">Select Material:</label>
            <select class="form-select" id="materialSelect" onchange="showMaterialTabs(this.value)">
              <% @materials.each_with_index do |material, index| %>
                <option value="<%= index %>" <%= 'selected' if index == 0 %>><%= material.name %></option>
              <% end %>
            </select>
          </div>

          <!-- Material Tabs Container -->
          <% @materials.each_with_index do |material, index| %>
            <div id="material-<%= index %>" class="material-tabs" style="<%= 'display: none;' unless index == 0 %>">
              <!-- Material Info -->
              <div class="subject-card p-3 mb-3">
                <div class="fw-bold fs-5 mb-1"><%= material.name %></div>
                <% if material.description.present? %>
                  <p class="mb-2 text-base"><%= material.description %></p>
                <% end %>
              </div>

              <!-- Tab Navigation -->
              <ul class="nav nav-tabs mb-3" id="materialTabs-<%= index %>" role="tablist">
                <li class="nav-item" role="presentation">
                  <button class="nav-link active" id="summary-tab-<%= index %>" data-bs-toggle="tab" data-bs-target="#summary-<%= index %>" type="button" role="tab">
                    Summary
                  </button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link" id="flashcards-tab-<%= index %>" data-bs-toggle="tab" data-bs-target="#flashcards-<%= index %>" type="button" role="tab">
                    Flashcards
                  </button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link" id="quizzes-tab-<%= index %>" data-bs-toggle="tab" data-bs-target="#quizzes-<%= index %>" type="button" role="tab">
                    Quizzes
                  </button>
                </li>
              </ul>

              <!-- Tab Content -->
              <div class="tab-content" id="materialTabsContent-<%= index %>">
                <!-- Summary Tab -->
                <div class="tab-pane fade show active" id="summary-<%= index %>" role="tabpanel">
                  <div class="subject-card p-3">
                    <% if material.summary.present? %>
                      <%= markdown(material.summary) %>
                    <% else %>
                      <div class="text-center py-4 text-muted">
                        <p>No summary available for this material yet.</p>
                      </div>
                    <% end %>
                  </div>
                </div>

                <!-- Flashcards Tab -->
                <div class="tab-pane fade" id="flashcards-<%= index %>" role="tabpanel">
                  <div class="subject-card p-3">
                    <div class="text-center py-4 text-muted">
                      <i class="fas fa-cards-blank fs-1 mb-3 d-block"></i>
                      <p>Flashcards feature coming soon!</p>
                      <small>Create interactive flashcards from your study materials.</small>
                    </div>
                  </div>
                </div>

                <!-- Quizzes Tab -->
                <div class="tab-pane fade" id="quizzes-<%= index %>" role="tabpanel">
                  <div class="subject-card p-3">
                    <div class="text-center py-4 text-muted">
                      <i class="fas fa-question-circle fs-1 mb-3 d-block"></i>
                      <p>Quizzes feature coming soon!</p>
                      <small>Generate practice quizzes based on your materials.</small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- JavaScript for Material Selection -->
          <script>
            function showMaterialTabs(selectedIndex) {
              // Hide all material tabs
              document.querySelectorAll('.material-tabs').forEach(function(tab, index) {
                tab.style.display = 'none';
              });
              
              // Show selected material tabs
              const selectedTab = document.getElementById('material-' + selectedIndex);
              if (selectedTab) {
                selectedTab.style.display = 'block';
              }
            }
          </script>

        <% else %>
          <div class="text-center py-4 text-muted">
            <p>No materials yet. Get started by uploading your first study material.</p>
              <label for="file-upload" class="btn btn-purple btn-sm rounded-pill mt-2">
                <span class="fs-5"></span>
                <span>Upload New Material</span>
              </label>
            
              <!-- Hidden form for file upload -->
              <%= form_with url: study_materials_path(@study), multipart: true, local: true, id: "upload-form", class: "d-none" do |form| %>
                <%= form.file_field "material[file]", id: "file-upload", accept: ".pdf", onchange: "document.getElementById('upload-form').submit();" %>
              <% end %>
            </div>

        <% end %>
      </div>
    </div>


    <!-- Your Tutor Card or Available Tutors Card -->
    <div class="col-lg-4">
      <% if @assigned_tutor %>
        <div class="subject-card p-4 mb-4">
          <h5 class="fw-bold mb-3 text-purple">Your Tutor for this Subject</h5>
          <div class="subject-card p-3 mb-2">
            <div class="fw-bold fs-5 mb-1"><%= @assigned_tutor.first_name %> <%= @assigned_tutor.last_name %></div>
            <div class="text-muted small mb-2"><%= @assigned_tutor.email %></div>
            <% if @assigned_tutor.bio.present? %>
              <p class="mb-2 text-base"><%= @assigned_tutor.bio %></p>
            <% end %>
            <% if @upcoming_session %>
              <div class="mb-2">
                <span class="fw-semibold">Upcoming Session:</span>
                <span class="fw-bold d-block mt-1"><%= @upcoming_session.start_time.strftime('%A, %b %d at %I:%M %p') %></span>
              </div>
            <% else %>
              <div class="d-flex flex-column gap-2 mt-2">
                <%= link_to "Book Session", new_tutoring_session_path(tutor_id: @assigned_tutor.id), class: "btn btn-purple btn-sm rounded-pill w-100" %>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="subject-card p-4 mb-4">
          <h5 class="fw-bold mb-3 text-purple">Available Tutors</h5>
          <% if @available_tutors.any? %>
            <div class="d-flex flex-column gap-3">
              <% @available_tutors.each do |tutor| %>
                <% expertise = tutor.expertises.find_by(subject: @study.subject) %>
                <div class="subject-card p-3 mb-2">
                  <div class="fw-bold fs-5 mb-1"><%= tutor.first_name %> <%= tutor.last_name %></div>
                  <div class="text-muted small mb-2"><%= tutor.email %></div>
                  <% if tutor.bio.present? %>
                    <p class="mb-2 text-base"><%= tutor.bio %></p>
                  <% end %>
                  <div class="d-flex flex-column gap-2 mt-2">
                    <%= link_to "Book Session", new_tutoring_session_path(tutor_id: tutor.id), class: "btn btn-purple btn-sm rounded-pill w-100" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4 text-muted">
              <p>No tutors available for this subject yet.</p>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Study Progress Card -->
      <div class="subject-card p-4 mt-4">
        <h5 class="fw-bold mb-3 text-purple">Study Progress</h5>
        <% percent_complete = @study.fake_percent_complete %>
        <div class="progress mb-2">
          <div class="progress-bar bg-purple" role="progressbar" style="width: <%= percent_complete %>%"></div>
        </div>
        <div class="fw-bold fs-5 text-center mt-2"><%= percent_complete %>% complete</div>
      </div>
    </div>
  </div>
</div>
