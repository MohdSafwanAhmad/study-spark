<div class="container">
  <h1>My Learners</h1>
  <div class="tutors-grid">
    <% @sessions.each do |session| %>
      <div class="tutor-card">
        <div class="tutor-info">
          <h2>
            <%= session.study.user.first_name %> <%= session.study.user.last_name %> â€” <%= session.study.subject.name %>
          </h2>
          <p><strong>Study Goal:</strong> <%= session.study.learning_objective %></p>
          <h3>Materials</h3>
          <ul>
            <% session.study.materials.each do |material| %>
              <li><%= material.name %> - <%= material.description %></li>
            <% end %>
          </ul>
          <%# Add notes, flashcards, quizzes here if you have those associations %>
        </div>
      </div>
    <% end %>
  </div>
</div> 